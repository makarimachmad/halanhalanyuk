<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="main.halanhalanyuk.EditProfile">








            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <Button
                    android:background="@color/colorTransparant"
                    android:id="@+id/edit_gantiImg"
                    android:layout_gravity="center|bottom"
                    android:text="Ganti"
                    android:textColor="#747474"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/edit_btnSave"
                    android:layout_gravity="end|bottom"
                    android:text="Simpan"
                    android:layout_margin="5sp"
                    android:background="@drawable/border_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@color/colorPrimary"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:visibility="visible"
                    android:id="@+id/edit_profile_image"
                    android:layout_width="170dp"
                    android:layout_height="170dp"
                    android:src="@drawable/empty"
                    android:layout_gravity="center|bottom"
                    />




            </FrameLayout>




            <LinearLayout
                android:paddingLeft="15dp"
                android:padding="40dp"
                android:orientation="vertical"
                android:layout_below="@id/profile_cardview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:id="@+id/edit_profile_nama"
                    android:paddingStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textSize="25sp"
                    android:textStyle="bold"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:id="@+id/edit_profile_username"
                    android:textSize="15sp"

                    android:editable="false"/>

                <TextView
                    android:text="Email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:inputType=""/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_profile_email"
                    android:textSize="15sp"
                    />

                <TextView
                    android:text="No Hp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:inputType="number"/>

                <EditText
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edit_profile_no_hp"
                    android:textSize="15sp"
                    />

            </LinearLayout>







</LinearLayout>
