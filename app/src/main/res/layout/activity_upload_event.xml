<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="15dp" xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="main.halanhalanyuk.UploadEvent">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Nama Acara"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/namaAcara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Keterangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/keteranganAcara"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <TextView
            android:text="Lokasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/lokasiAcara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Tanggal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/tanggalAcara"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"/>

        <ImageView
            android:id="@+id/img_preview"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <Button
            android:background="@color/colorTransparant"
            android:id="@+id/btnUpload"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:text="Pilih gambar"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnKirim"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Acara"/>
    </LinearLayout>

</RelativeLayout>
